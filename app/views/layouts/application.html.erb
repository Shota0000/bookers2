<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
         <nav class="navbar">
        	<div class="container-fluid">
        		<div class="navbar-header">
        			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        				<span class="sr-only">Toggle navigation</span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        				<span class="icon-bar"></span>
        			</button>
        			<span class="span_white">
        				Bookers
        			</span>
        		</div>

        		<div class="collapse navbar-collapse navbar-right" id="navbarEexample7">
        			<ul class="nav navbar-nav ">
        			  <% if user_signed_in? %>
        			    <li>
          				  <%= link_to user_path(current_user.id) do%>
          				    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>　Home
          				  <% end %>
          				</li>
          				<li>
          				  <%= link_to users_path do%>
          				    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>　Users
          				  <% end %>
          				</li>
          				<li>
          				  <%= link_to books_path do%>
          				    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>　Books
          				  <% end %>
          				</li>
          				<li>
          				  <%= link_to destroy_user_session_path, method: :delete do%>
          				    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>　logout
          				  <% end %>
          				</li>
        			  <% else %>
          				<li>
          				  <%= link_to "　Home",root_path,class: 'glyphicon glyphicon-home'%>
          				</li>
          				<li>
          				  <%= link_to about_path do%>
          				    <span class="glyphicon glyphicon-link" aria-hidden="true"></span>　About
          				  <% end %>
          				</li>
          				<li>
          				  <%= link_to new_user_registration_path do%>
          				    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>　sign up
          				  <% end %>
          				</li>
          				<li>
          				  <%= link_to new_user_session_path do%>
          				    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>　login
          				  <% end %>
          				</li>
          			<% end %>
        			</ul>

        		</div>
        	</div>
        </nav>
      </div>
    </header>
    <%= yield %>
    <footer>
      <div class="container">
  	    <div class="row">
    	    <div class="col-xs-3 col-xs-offset-9">
    		    <p>CopyRight Infratop.inc</p>
    	    </div>
        </div>
      </div>
    </footer>
  </body>
</html>
