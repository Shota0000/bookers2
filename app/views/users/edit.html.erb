<div class="body">
  <div class="container">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
        <% if @user.errors.any? %>
          <div class="error_explanation">
             <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
             <ul>
             <% @user.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
             </ul>
          </div>

        <% end %>
        <div class="field">
        <label for="user_name">Name</label><br>
        <%= f.text_field :name, autofocus: true, class:"", id:"inputEmail", placeholder:""%>
      </div>

      <div class="field">
        <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "" %>
        </div>

      <div class="field">
        <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, class:"", id:"inputEmail", placeholder:""%>
      </div>

      <div class="actions">
       <%= f.submit "Update User", class:"" %>
      </div>
    <% end %>
  </div>
</div>