<div class="body">
  <div class="container">
   <div class="notice">
       <%= flash[:notice] %>
   </div>
   <div class="row">
     <div class="col-xs-3">
       <div class="row">
         <h2>User info</h2>
          <%= attachment_image_tag @book2.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "",fallback: "no_image.jpg" %>
          <table class="table col-xs-12">
            <tbody>
              <tr></tr>
              <tr>
            	  <th>name</th>
            	  <th><%= @book2.user.name %></th>
              </tr>
              <tr>
            	  <th>introduction</th>
            	  <th><%= @book2.user.introduction %></th>
              </tr>
           </tbody>
         </table>
       </div>

         <div class="row">
            <p>
              <% if @book2.user == current_user %>
               <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_27476" %>
              <% else %>
               <%= link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_27476" %>
              <% end %>
            </p>
         </div>


        <h2>New Book</h2>
        <div class="row">
          <%= form_with model:@book, local:true do |f| %>
            <% if @book.errors.any? %>
              <h3><%= @book.errors.count %> error prohibited this book from being saved:</h3>
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <h5>Title</h5>
            <%= f.text_field :title ,class:"col-xs-12 book_title"%>
            <h5>Opinion</h5>
            <%= f.text_area :body ,class:"col-xs-12 book_body"%>
            <%= f.submit 'Create Book',class:"col-xs-12 btn btn-primary margin"%>
          <% end %>
        </div>

     </div>

     <div class="col-xs-9">
       <h2>Book detail</h2>
       <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>

             <tbody>
                <tr>
                  <td>
                    <%= link_to user_path(@book2.user.id) do%>
                      <%= attachment_image_tag @book2.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "" ,fallback: "no_image.jpg"%>
                      <br>
                      <%= @book2.user.name %>
                    <% end %>
                  </td>
                  <td><%= @book2.title %></td>
                  <td>
                    <%= @book2.body %>
                  </td>
                  <td>
                    <% if @book2.user == current_user %>
                      <%= link_to "Edit", edit_book_path,class:"btn-sm btn-success edit_book_43576" %>
                    <% end %>
                  </td>
                  <td>
                    <% if @book2.user == current_user %>
                        <%= link_to "Destroy", book_path(@book2), method: :delete, "data-confirm" => "本当に消しますか？",class:"btn-sm btn-danger destroy_book_43576" %>
                    <% end %>
                  </td>
                </tr>
             </tbody>
        </table>

     </div>
   </div>
  </div>
</div>